{
    "name": "cvc4",
    "description": "CVC4 extension",
    "author": "University of Iowa",
    "license": "MIT",
    "version": "0.5.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/mudathirmahgoub/cvc4extension"
    },
    "publisher": "mudathirmahgoub",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.23.0"
    },
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "cvc",
                "aliases": [
                    "cvc4"
                ],
                "extensions": [
                    ".cvc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "extension.runCVC4",
                "title": "Run CVC4",
                "category": "CVC4"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.runCVC4",
                    "when": "editorLangId == cvc"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.runCVC4",
                "key": "ctrl+enter",
                "mac": "cmd+enter",
                "when": "editorTextFocus"
            }
        ],
        "grammars": [
            {
                "language": "cvc",
                "scopeName": "cvc",
                "path": "./cvc4.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "CVC4",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                },
                "cvc4.executable": {
                    "scope": "resource",
                    "type": "string",
                    "default": "cvc4",
                    "description": "Specifies the path of cvc4 executable."
                },
                "cvc4.arguments": {
                    "scope": "resource",
                    "type": "array",
                    "default": [
                        "--lang",
                        "cvc4",
                        "--incremental",                        
                        "--strict-parsing"
                    ],
                    "description": "CVC4 arguments"
                },
                "cvc4.isVerbose": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "Specifies whether to show verbose text"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && cd server && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.0.0",
        "tslint": "^5.11.0",
        "typescript": "^3.1.3"
    }
}
